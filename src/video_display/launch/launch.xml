<launch>
    <arg name="tcp_ip" default="0.0.0.0"/>
    <arg name="tcp_port" default="10000"/>

    <node
        name="server_endpoint"
        pkg="ros_tcp_endpoint"
        executable="default_server_endpoint.py"
        output="screen"
        respawn="true">
        <param name="tcp_ip" type="string" value="$(arg tcp_ip)"/>
        <param name="tcp_port" type="integer" value="$(arg tcp_port)"/>
    </node>

    <node
        name="minimal_subscriber"
        pkg="video_display"
        executable="video_subscriber.py"
        output="screen">
    </node>
</launch>
